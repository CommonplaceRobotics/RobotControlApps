<App name="MinimalApp-Python" label="Python Minimal App Sample">
	<!-- Define the executable(s) to call -->
	<executable path="app.py"/>

	<!-- Define the app functions that the robot program can call -->
	<!-- General example on how to define a function, this one does not do anything. -->
	<function name="my_function" label="Example app function">
		<!-- These parameters can be set in the app command, they will be sent to the app when the command is called -->
		<parameter name="my_text_parameter" type="string" ui-hint="text" label="Enter a text" />
		<parameter name="my_number_parameter" type="double" ui-hint="number" label="Enter a number" />
		<parameter name="my_boolean_parameter" type="bool" ui-hint="checkbox" label="Check this" />
	</function>
	<!-- Example: Calculate <base_number_variable> to the power of <exponent_number> and assign the result to <result_variable> -->
	<function name="pow" label="Exponentiation">
		<parameter name="base_variable" type="string" ui-hint="text" label="Base (number variable)"></parameter>
		<parameter name="exponent_number" type="double" ui-hint="number" label="Exponent"></parameter>
		<parameter name="result_variable" type="string" ui-hint="text" label="Result (number variable)"></parameter>
	</function>
</App>
